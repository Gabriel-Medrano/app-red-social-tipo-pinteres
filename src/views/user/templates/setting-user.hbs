<div>
    <div class="my-4">
        <h4 class="text-center">Setting of user</h4>
        <form method="POST" class="form-mediano">
            <div class="text-center my-2">
                <img src="{{user.icon}}" alt="" class="icon-miniature">
            </div>
            <div class="form-group">
                <p class="small ml-3">nick name</p>
                <input type="text" name="nick_name" value="{{user.nick_name}}" class="form-control border border-white">
            </div>
            <div class="form-group">
                <p class="small ml-3">Email</p>
                <input type="text" value="{{user.email}}" class="form-control border border-white" readonly>
            </div>
             <div class="form-group">
                <p class="small ml-3">Description</p>
                <input type="text" name="description" value="{{user.description}}" placeholder="Enter the description" class="form-control border border-white">
            </div>
             <div class="form-group text-right">
                <a href="/perfil/password" class="btn-sm btn-primary">Change Password</a>
            </div>
            <div class="form-group">
                <button class="btn btn-info">Save</button>
            </div>
        </form>
    </div>
</div>