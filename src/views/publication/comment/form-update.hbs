<div>
    <form action="/comment/edit/{{comment._id}}" method="post" class="form-mediano">
        <div class="form-group my-2 text-center">
            <img src="{{comment.user.icon}}" alt="" class="icon-mediano">
            <p>{{comment.user.nick_name}}</p>
        </div>
        <div class="form-group my-2">
            <input type="text" class="form-control" name="description" value="{{comment.description}}" placeholder="Enter the description">
        </div>
  
        <div class="form-group my-2 buttoms-end">
            <button type="submit" class="btn btn-info">Update</button>
            <a href="/comment/delete/{{comment._id}}" class="btn btn-danger">Delete</a>
        </div>
    </form>
</div>